{
  "apiVersion": "flock/v1",
  "kind": "Agent",
  "namespace": "default",
  "metadata": {
    "name": "my-agent",
    "description": "A Q&A agent for internal projects",
    "labels": {
      "app": "my_app"
    }
  },
  "spec": {
    "vendor": "conversational-react-description",
    "options": {
      "verbose": true
    },
    "dependencies": [
      {
        "kind": "LLMChat",
        "name": "openai-gpt4",
        "namespace": "default"
      }
    ],
    "tools": [
      {
        "kind": "LoadTool",
        "name": "my-wolfram-alpha",
        "namespace": "default"
      },
      {
        "kind": "LoadTool",
        "name": "google-search-gpt4",
        "namespace": "default"
      },
      {
        "kind": "VectorStoreQATool",
        "name": "finance-qa-tool",
        "namespace": "default"
      }
    ]
  }
}
