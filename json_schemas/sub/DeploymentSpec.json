          "type": "array",
          "items": {
            "$ref": "#/definitions/ContainerPort"
          }
        },
        "image_pull_policy": {
          "title": "Image Pull Policy",
          "description": "The image pull policy",
          "default": "IfNotPresent",
          "enum": [
            "Always",
            "Never",
            "IfNotPresent"
          ],
          "type": "string"
        }
