        "VectorStore",
        "VectorStoreQATool",
        "LLM",
        "LLMChat",
        "LoadTool",
        "Splitter",
        "Agent",
        "PromptTemplate",
        "LLMTool",
        "Custom"
      ],
      "type": "string"
    },
    "DeploymentTargetResource": {
      "title": "DeploymentTargetResource",
      "description": "Deployment target resource schema.",
      "type": "object",
