      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "description": "The name of the environment variable",
          "type": "string"
        },
        "value": {
          "title": "Value",
          "description": "The value of the environment variable",
          "type": "string"
        },
        "value_from": {
          "title": "Value From",
